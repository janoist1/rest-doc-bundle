<h4>{{ operation.name }}</h4>
<p>{{ operation.description }}</p>
<p><i>Performed in scope of a {{ operation.scope }}</i></p>
<h5>Request</h5>
<p><code>{{ operation.method }} {{ operation.uri }}</code></p>
<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>Name</th>
        <th>Location</th>
        <th>Type</th>
        <th>Required</th>
        <th>Description</th>
        <th>Default</th>
        <th>Format</th>
        <th>Sample</th>
    </tr>
    {% for parameter in operation.parameters %}
        <tr>
            <td>{{ parameter.name }}</td>
            <td>{{ parameter.location ?: '-' }}</td>
            <td>{{ parameter.type ?: '-' }}</td>
            <td>{{ parameter.isRequired ? 'Yes' : 'No' }}</td>
            <td>{{ parameter.description ?: '-' }}</td>
            <td>{{ parameter.default ?: '-' }}</td>
            <td>{{ parameter.format ?: '-' }}</td>
            <td>{{ parameter.sample ?: '-' }}</td>
        </tr>
    {% else %}
        <tr>
            <td colspan="8">
                <i>There are no parameters defined for this operation</i>
            </td>
        </tr>
    {% endfor %}
</table>
<h5>Response</h5>
<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>Code</th>
        <th>Reason</th>
    </tr>
    {% for response in operation.responses %}
        <tr>
            <td>{{ response.code }}</td>
            <td>{{ response.message }}</td>
        </tr>
    {% else %}
        <tr>
            <td colspan="2">
                <i>There are no responses defined for this operation</i>
            </td>
        </tr>
    {% endfor %}
</table>
<section id="{{ resource.name }}">
    <h2>{{ resource.name }}</h2>
    <p>{{ resource.description }}</p>
    <h3>Properties</h3>
    <table class="table table-striped table-bordered table-hover">
        <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Description</th>
            <th>Default</th>
            <th>Format</th>
            <th>Sample</th>
        </tr>
        {% include "SheppersRestDocBundle:Resource:include/properties.html.twig" with {'properties': resource.properties, 'indent': '' } %}
    </table>
    {% include "SheppersRestDocBundle:Resource:include/operations.html.twig" with {'operations': resource.operations } %}
</section>